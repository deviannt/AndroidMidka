<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageViewGame"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/cs2_image"
        android:contentDescription="CS2 Image" />

    <TextView
        android:id="@+id/textViewGameInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CS2 — одна из моих любимых игр! Соревновательные матчи, тактика и скилл решают всё!"
        android:textSize="18sp"
        android:paddingTop="16dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Назад"
        android:layout_marginTop="16dp" />

</LinearLayout>
